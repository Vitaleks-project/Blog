<%= render "layouts/datepicker" %>
<center><h2>Create club</h2>

  <%= form_for(@club) do |club| %>
      <% if @club.errors.present? %>
          <div class="alert alert-error fade in">
            <ul>
              <h4><%= @club.errors.count > 1  ? "You have #{@club.errors.count} errors" : "You have #{@club.errors.count} error"%></h4>
              <% @club.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div><%= club.label :clubname, "Name club" %><br />
        <%= club.text_field :clubname, :autofocus => true %></div>

      <div><%= club.label :stadiumname, "Stadium name" %><br />
        <%= club.text_field :stadiumname %></div>

      <div><%= club.label :year_of_foundation, "Year of foundation" %><br />
        <%= club.text_field :year_of_foundation, :id => 'datepicker' %></div>

      <div><%= club.label :coach, "Coach" %><br />
        <%= club.text_field :coach %></div>

      <div><%= club.label :uniq_title, "Uniq title" %><br />
        <%= club.text_field :uniq_title %></div>

      <div><%= club.label :description, "Description" %><br />
        <%= club.text_area :description, :rows => 6 %></div>

      <div><%= club.label :logo_stadium, "Photo Stadium" %><br />
        <%= club.file_field :logo_stadium %></div>

      <div><%= club.label :logo, "Logo" %><br />
        <%= club.file_field :logo %></div>

      <div><%= club.submit "Create" %></div>
  <% end %>
</center>
