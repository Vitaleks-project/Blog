<% @clubs.each do |club| %>
    <%= image_tag club.logo, :size => '50x50' %>
    <%= image_tag club.logo_stadium, :size => '50x50' %><br/>
    Name: <%=  link_to club.clubname, club %><br/>
    Stadium name: <%= club.stadiumname %><br/>
    Coach: <%= club.coach %><br/>
    Year of foundation: <%= club.year_of_foundation %><br/>
    Description: <%= club.description %><br/>
    <%= link_to "Delete", club, :class => 'right', method: :delete,
            data: { confirm: "You sure?" } %>
    <%= link_to " Edit |", edit_club_path(club), :class => "right"%>
    <hr/>
<% end %>