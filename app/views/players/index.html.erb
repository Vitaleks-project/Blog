<%= render 'layouts/header_admin' %>
<% if @players.present? %>
    <h4 class="left">Players:</h4><br/>
    <div><%= will_paginate @players, :class => 'right' %></div>
    <table class="table table-hover">
      <thead>
      <tr>
        <th style="width:5%">Number:</th>
        <th style="width:20%">Name:</th>
        <th style="width:15%">Club:</th>
        <th style='width:15%'>Country:  </th>
        <th style="width:13%">Position: </th>
        <th style="width:20%">Birthday: </th>
        <th>Actions: <i class=" icon-wrench muted"></i></th>
      </tr>
      </thead>
      <% @players.each do |p| %>
          <tbody>
          <tr>
            <td><%= p.number %></td>
            <td><%= link_to (p.full_name), p  %></td>
            <td><%= p.club %></td>
            <td><%= p.country %></td>
            <td><p class="muted"><%= p.position %></p></td>
            <td><%= p.birthday %></td>
            <td>
              <%= link_to " Edit", edit_player_path(p) %>
              <%= link_to "Delete", p, method: :delete,
                          data: { confirm: "You sure?" } %>
            </td>
          </tr>
          </tbody>
      <% end %>
    </table>
    <div><%= will_paginate @players, :class => 'right' %></div>
<% else %>
    <h4 class="center">Players not found...</h4>
<% end %>

