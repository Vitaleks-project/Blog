<h3 class="center">Admin Page</h3>
  <div id="content">
    <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
      <li class="active"><a href="#posts" data-toggle="tab">Posts</a></li>
      <li><a href="#club" data-toggle="tab">Clubs</a></li>
      <li><a href="#users" data-toggle="tab">Users</a></li>
    </ul>
    <div id="my-tab-content" class="tab-content">
      <div class="tab-pane active" id="posts">
        <div class="container-admin">
          <p>Area management posts: </p>
          <%= link_to 'Create new post', new_post_path, :class => "btn" %>
        </div>
        <%= render 'admin/post' %>
      </div>
      <div class="tab-pane" id="club">
        <div class="container-admin">
          <p>Area management clubs: </p>
          <%= link_to 'Create new club', new_club_path, :class => "btn" %>
        </div>
        <%= render 'admin/clubs' %>
      </div>
      <div class="tab-pane" id="users">

      </div>
    </div>
  </div>
  <script type="text/javascript">
      jQuery(document).ready(function ($) {
          $('#tabs').click();
      });
  </script>


